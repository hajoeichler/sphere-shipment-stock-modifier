    "credentials": {
        "fields": {
            "projectKey": {
                "viewClass": "TextFieldView",
                "label": "Master Project Key",
                "required": true,
                "placeholder": "Paste your project key"
            },
            "clientId": {
                "viewClass": "TextFieldView",
                "label": "Master Client Id",
