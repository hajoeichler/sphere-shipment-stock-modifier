            "clientSecret": {
                "viewClass": "TextFieldView",
                "label": "Master Client Secret",
                "required": true,
                "placeholder": "Paste your client secret"
            }
        }
    },
    "actions": {
        "services": {
            "main": "elasticio.js",
            "title": "Shipment Stock Modifier"
        }
    }
